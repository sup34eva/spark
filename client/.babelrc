{
    "plugins": [
        "transform-object-rest-spread",
        "transform-class-properties",
        "transform-do-expressions",
        "react-hot-loader/babel",
        "flow-react-proptypes",
        ["relay", {
            "schema": "../server-graphql/data/schema.graphql"
        }],
        ["module-resolver", {
            "root": ["./window", "./app"],
            "alias": {
                "actions": "./actions",
                "components": "./components",
                "utils": "./utils",
                "store": "./store"
            }
        }]
    ],
    "presets": [
        ["env", {
            "modules": false,
            "targets": {
                "chrome": 56
            }
        }],
        "react"
    ]
}
