{
  "rules": {
    ".read": "auth != null",
    ".write": "false",
    "channels": {
      "$channel": {
        ".read": "data.child('users').hasChild(auth.uid)",
        "type": {
          ".validate": "data.isString() && data.val().matches(/^(CHANNEL|GROUP|CONVERSATION)$/)"
        }
      }
    },
    "users": {
      "$user": {
        ".write": "$user == auth.uid",
        "status": {
          ".validate": "data.isString() && data.val().matches(/^(ONLINE|BUSY|AWAY|OFFLINE)$/)"
        }
      }
    }
  }
}
